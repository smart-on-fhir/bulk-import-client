{ 
  "include": ["./src/*.ts", "./src/*.js"], 
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "importHelpers": false,
    "downlevelIteration": false,
    "isolatedModules": false,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "noImplicitUseStrict": true
  }
}
